<h2>Записаться!!!</h2>
<p>На этой странице можно записаться!</p>

<form action="/visit" method="POST" class="form-horizontal">

  <div class="form-group">

    <label>Ваше имя</label>
    
      <input name="username" type="text" class="form-control"  placeholder="ИМЯ" value="<%= @aaa %>">
    </div>
  	
  	 
   <div class="form-group">

    <label>Ваш телефон</label>
    
      <input name="phone" type="text" class="form-control" placeholder="Телефон" value="<%= @bbb %>">
    </div>
	
	

    <div class="form-group">

    <label>Время</label>
    
      <input name="time" type="text" class="form-control" placeholder="Время" value="<%= @ccc %>">
    </div>


 <div class="form-group">

    <label>Ваш парикмахер:</label>
    <select name="barber" class="form-control" >
      <option>Jessie</option>
      <option>Walter</option>
      <option>Gus</option>
      <option>Ferrari</option>
  </select>
 </div>

 <div class="form-group">

    <label>Цвет краски:</label>
    <select id="color" name="color>
    
        <option value="#7bd148">Green</option>
        <option value="#5484ed">Bold blue</option>
        <option value="#a4bdfc">Blue</option>
        <option value="#46d6db">Turquoise</option>
        <option value="#7ae7bf">Light green</option>
        <option value="#51b749">Bold green</option>
        <option value="#fbd75b">Yellow</option>
        <option value="#ffb878">Orange</option>
        <option value="#ff887c">Red</option>
        <option value="#dc2127">Bold red</option>
        <option value="#dbadff">Purple</option>
        <option value="#e1e1e1">Gray</option>
</select>

  </div>


 
  
	<button type="submit" class="btn btn-primary">Нажми эту штуку</button>

</form>

<script type="text/javascript">

$(function(){
    $('#color').simplecolorpicker();
  });

</script>